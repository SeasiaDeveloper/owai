<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.LoginSignUpChoice">

    <com.oway.customviews.CustomTextView
        android:id="@+id/tvxLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_margin="@dimen/_60sdp"
        android:text="@string/login_choice"
        android:textStyle="bold"
        android:textColor="@android:color/holo_orange_light"
        android:textSize="@dimen/_20sdp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.3"/>

    <com.oway.customviews.CustomTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:id="@+id/tvxSignup"
        android:text="@string/signUp_Choice"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:textSize="@dimen/_20sdp"
        android:gravity="center"
        android:singleLine="true"
        android:textColor="@android:color/holo_orange_light"
        android:layout_margin="@dimen/_30sdp"
        app:layout_constraintVertical_bias="0.2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvxLogin"
        android:focusable="true" />

</androidx.constraintlayout.widget.ConstraintLayout>